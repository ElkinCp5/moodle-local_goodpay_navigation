    Classes required for JS:
    * None

    Data attibutes required for JS:
    * None

    Context variables required for this template:
    * None
}}

<div class="container" style="max-width: 800px;">
<nav class="navbar navbar-expand-lg navbar-light bg-light shadow-none mt-4 mb-5">
  <a class="navbar-brand" href="{{home}}">
    {{#str}}goodpay, local_goodpay_navigation{{/str}}
  </a>
  <button
  type="button"
  class="navbar-toggler"
  data-toggle="collapse"
  data-target="#navbarSupportedContent"
  aria-controls="navbarSupportedContent"
  aria-expanded="false"
  aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
        {{# links }}
            <li class="nav-item active">
                <a class="nav-link" href="{{url}}" target="_blank">{{name}} </a>
            </li>
        {{/ links }}
    </ul>
    {{# action }}
        <button
        id="btn-enable"
        data-url="{{url}}"
        data-toggle="tooltip"
        title="{{#str}}tooltip:action, local_goodpay_navigation, {{name}}{{/str}}"
        class="btn btn-outline-{{class}} btn-sm my-2 my-sm-0">
        {{{icon}}} {{name}}
        </button>
    {{/ action }}
  </div>
</nav>

{{# hascourses }}
<div class="list-group">
    {{# courses }}
    <div class="list-group-item list-group-item-action flex-column align-items-start">
      <div class="d-flex w-100 justify-content-between">
        <h5 class="mb-1">{{fullname}}</h5>
        <span class="badge badge-pill badge-info" style="padding-top: 7px;">
        {{{icon}}} {{visible}}
        </span>
      </div>
      <p class="mb-1">
        {{#str}}registrationsystems, local_goodpay_navigation{{/str}}
      {{# enrol }}
        {{# url }}
        <a class="badge badge-primary" href="{{url}}" target="_blank" >{{name}}</a>
        {{/ url }}
        {{^ url }}
        <span class="badge badge-light">{{name}}</span>
        {{/ url }}
      {{/ enrol }}
      </p>
      {{# name }}
      <small>
        {{#str}}category, local_goodpay_navigation, {{name}}{{/str}}
      </small>
      {{/ name }}
      {{# status }}
      <a class="btn btn-outline-primary btn-sm btn-block mt-4" href="{{{url}}}" target="_blank">
        <i class="fa fa-shopping-cart" aria-hidden="true"></i>
        {{#str}}activategoodpay, local_goodpay_navigation, {{fullname}}{{/str}}
      </a>
      {{/ status }}
    </div>
    {{/ courses }}
</div>
{{/ hascourses }}

{{^ hascourses }}
   <h4>No hay cursos</h4>
{{/ hascourses }}
</div>
